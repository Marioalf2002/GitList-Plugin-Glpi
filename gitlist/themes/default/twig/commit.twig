{% extends 'layout_page.twig' %}

{% set page = 'commits' %}

{% block title %}GitList | {{repo}}{% endblock %}

{% block content %}
{% include 'breadcrumb.twig' with {breadcrumbs: [{dir: "Commit #{commit.hash}", path:''}]} %}

{# Incio Formulario para enlace de commit #}
    <hr>
    <div id="commit">
        <form action="../../Conexion/commit.php" method="post" autocomplete="off">
            <p>
                Este campo es para enlazar el Commit que esta en vista con un Ticket.
            </p>
            <p>Enlazar ha Ticket:
                <input type="hidden" name="commit" id="commit" value={{ commit.hash }} />
                <input type="hidden" name="repo" id="repo" value={{ repo }} />
                <input type="text" name="idticket" id="idticket" require pattern="[0-9]{1,15}" placeholder="ID Ticket" />
                <input type="submit" value="Enviar" class="btn-success"/>
            </p>
        </form>
    </div>
    <hr>
{# Fin Formulario #}

<div class="commit-view">
    <div class="commit-header">
        <span class="pull-right"><a class="btn btn-small" href="{{ path('branch', {repo: repo, branch: commit.hash}) }}"
                title="Browse code at this point in history"><i class="icon-list-alt"></i> Ver Contenido</a></span>
        <h4>{{ commit.message }}</h4>
    </div>
    <div class="commit-body">
        {% if commit.body is not empty %}
        <p>{{ commit.body | nl2br }}</p>
        {% endif %}
        <img src="{{ avatar(commit.author.email, 32) }}" class="pull-left space-right" />
        <span>
            <a href="mailto:{{ commit.author.email }}">{{ commit.author.name }}</a> escrito el
            {{ commit.date | format_date }}
            {% if commit.author.email != commit.commiter.email %}
            &bull; <a href="mailto:{{ commit.commiter.email }}">{{ commit.commiter.name }}</a> compartido el
            {{ commit.commiterDate | format_date }}
            {% endif %}
            <br />Mostrando {{ commit.changedFiles }} archivos modificados
        </span>
    </div>
</div>

<ul class="commit-list">
    {% for diff in commit.diffs %}
    <li><i class="icon-file"></i> <a href="#diff-{{ loop.index }}">{{ diff.file }}</a> <span
            class="meta pull-right">{{ diff.index }}</span></li>
    {% endfor %}
</ul>

{% for diff in commit.diffs %}
<div class="source-view">
    <div class="source-header">
        <div class="meta"><a id="diff-{{ loop.index }}">{{ diff.file }}</div>

        <div class="btn-group pull-right">
            <a href="{{ path('commits', {repo: repo, commitishPath: commit.hash ~ '/' ~ diff.file}) }}"
                class="btn btn-small"><i class="icon-list-alt"></i> Historia</a>
            <a href="{{ path('blob', {repo: repo, commitishPath: commit.hash ~'/' ~ diff.file}) }}"
                class="btn btn-small"><i class="icon-file"></i> Ver archivo @ {{ commit.shortHash }}</a>
        </div>
    </div>

    <div class="source-diff">
        <table>
            {% for line in diff.getLines %}
            <tr>
                <td class="lineNo">
                    {% if line.getType != 'chunk' %}
                    <a name="L{{ loop.index }}R{{ line.getNumOld }}"></a>
                    <a href="#L{{ loop.index }}R{{ line.getNumOld }}">
                        {% endif %}
                        {{ line.getNumOld }}
                        {% if line.getType != 'chunk' %}
                    </a>
                    {% endif %}
                </td>
                <td class="lineNo">
                    {% if line.getType != 'chunk' %}
                    <a name="L{{ loop.index }}L{{ line.getNumNew }}"></a>
                    <a href="#L{{ loop.index }}L{{ line.getNumNew }}">
                        {% endif %}
                        {{ line.getNumNew }}
                        {% if line.getType != 'chunk' %}
                    </a>
                    {% endif %}
                </td>
                <td style="width: 100%">
                    <pre{% if line.getType %} class="{{ line.getType }}" {% endif %}>{{ line.getLine }}</pre>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endfor %}

<hr />
{% endblock %}